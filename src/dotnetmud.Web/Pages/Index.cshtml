@page
@using Microsoft.AspNetCore.Identity
@using dotnetmud.Web.Database.Models
@using dotnetmud.Web.Models
@inject SignInManager<ApplicationUser> SignInManager
@model IndexModel

@{
    ViewData["Title"] = "Home page";
    Layout = "_HomeLayout";
}

<div class="wrapper">
    <div class="transparentpanel">
        @if (SignInManager.IsSignedIn(User))
        {
            <a asp-page="/Game/Index" class="fantasy-btn-3xl fantasy-bone-n-copper">
                Enter the game
            </a>
        }
        else
        {
            <a asp-page="/Account/Login" class="fantasy-btn-3xl fantasy-bone-n-copper">
                Sign in
            </a>
        }
    </div>
</div>
