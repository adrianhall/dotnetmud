@page
@model LogoutModel
@{
    Layout = "_AccountLayout";
}

<div class="text-center">
    <h4 class="text-gray-800 mb-4">Sign out</h4>
@{
    if (User.Identity?.IsAuthenticated ?? false)
    {
        <form class="form-inline" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/")" method="post">
            <button type="submit" class="btn btn-primary">Click here to sign out</button>
        </form>
    }
    else
    {
        <p>You have successfully signed out of the application.</p>
    }
}
</div>