{
  "ConnectionStrings": {
    "IdentityDb": "Server=(localdb)\\mssqllocaldb;Database=dotnetmud-identity;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Database": {
    "ResetDatabaseOnStartup": true,
    "MigrateDatabaseOnStartup": false
  },
  "Identity": {
    "Options": {
      "EnableLockout": false,
      "Lockout": {
        "AllowedForNewUsers": true,
        "DefaultLockoutTimeSpan": "00:05:00",
        "MaxFailedAccessAttempts": 5
      },
      "Password": {
        "RequireDigit": false,
        "RequireLowercase": false,
        "RequireNonAlphanumeric": false,
        "RequireUppercase": false,
        "RequiredLength": 4,
        "RequiredUniqueChars": 1
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "dotnetmud.Web": "Trace"
    }
  },
  "webOptimizer": {
    "enableCaching": false,
    "enableMemoryCache": false,
    "enableTagHelperBundling": false,
    "allowEmptyBundle": false
  }
}
